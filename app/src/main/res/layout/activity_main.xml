<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center_vertical">
            <include layout="@layout/top" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:text="나의자산"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="￦20,231,268"
                android:textColor="#ffffff"
                android:textSize="25sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="15dp"
                android:background="#4cffffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="20dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_bg_round"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/img_btn_front"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/bring_front"
                            android:background="#B9ABFC"
                            android:contentDescription="@string/app_name"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="받기"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="28dp">
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_bg_round"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/img_btn_bottom"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/bring_bottom"
                            android:background="#B9ABFC"
                            android:contentDescription="@string/app_name"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="보내기"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="28dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_bg_round"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/img_btn_repost"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/bx_repost"
                            android:background="#B9ABFC"
                            android:contentDescription="@string/app_name"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="교환"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="27dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_bg_round"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/img_btn_history"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/btn_img_history"
                            android:background="#B9ABFC"
                            android:contentDescription="@string/app_name"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="보내기"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_main"
                android:layout_width="362dp"
                android:layout_height="48dp"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp2_main"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="32dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ffffff">

            <include layout="@layout/bottom" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>